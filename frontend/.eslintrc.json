{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "jsx-a11y/anchor-is-valid": [ "error", {
          "components": [ "Link" ],
          "specialLink": [ "to" ]
        }],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "prefer-arrow-callback": [
            "error"
        ],
        "max-len": [
            "warn",
            140
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-no-bind": [
            "error"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "no-else-return": [
            "off"
        ],
        "prefer-stateless-function": [
            "off"
        ],
        "jsx-a11y/no-static-element-interactions": [
            "off"
        ],
        "import/extensions": [
            "error",
            {
                "json": "never"
            }
        ],
        "import/prefer-default-export": [
            "off"
        ]
    },
    "env": {
        "browser": true
    }
}
